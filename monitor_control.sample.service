
[Unit]
Description=Toggle Monitor Input from Keypad

[Service]
Environment="OPEN_WEATHER_API_KEY="
Environment="LAT="
Environment="LON="
WorkingDirectory=${DIR}/src
ExecStart=${DIR}/.venv/bin/python -m uvicorn main:app \
    --host 0.0.0.0 \
    --port 1602 \
    --reload \
    --app-dir ${DIR}/src


[Install]
WantedBy=multi-user.target
